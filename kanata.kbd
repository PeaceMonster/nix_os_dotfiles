(defsrc
    caps s d f j k l
)

(defalias
    cec (tap-hold 200 200 esc lctl))

(defalias fshift (tap-hold 200 200 f ShiftLeft))
(defalias jshift (tap-hold 200 200 j ShiftLeft))

(defalias dcontrol (tap-hold 200 200 d ControlLeft))
(defalias kcontrol (tap-hold 200 200 k ControlLeft))

(defalias ssuper (tap-hold 200 200 s MetaLeft))
(defalias lsuper (tap-hold 200 200 l MetaLeft))

(deflayer default
    @cec @ssuper @dcontrol @fshift @jshift @kcontrol @lsuper
)
